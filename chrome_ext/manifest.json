{
  "name": "Skrolla",
  "description": "Save links to your Skrolla reading list",
  "version": "0.0.2",
  "permissions": [
    "tabs"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "Add to Skrolla"
  },
  "icons" : {
    "48" : "icons/icon48.png",
    "128" : "icons/icon128.png"
  },
  "manifest_version": 2
}
