{
  "name": "Skrolla",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Save links from your browser to your Skrolla reading list",
  "background" : {
    "scripts": ["background.js"]
  },
  "homepage_url": "https://dev.skrol.la",
  "permissions": [ "tabs", "http://*/*", "https://*/*" ],
  "page_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "add to Skroll",
    "default_popup": "pop.html"
  },
  "content_scripts" : [
    {
      "matches" : [
        "http://*/*",
        "https://*/*"
      ],
      "js" : ["pop.js"],
      "run_at" : "document_idle",
      "all_frames" : false
    }
  ],
  "icons" : {
    "48" : "icons/icon48.png",
    "128" : "icons/icon128.png"
  }
}
